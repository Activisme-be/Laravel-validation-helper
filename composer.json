{
    "name": "actb/laravel-form-helpers",
    "description": "Handle form model bind, old input and validation error messages in a clean easy way.",
    "keywords": ["laravel", "form", "html", "eloquent", "input", "validation", "session", "helpers"],
    "license": "MIT",
    "author": [
        {
            "name": "Tim Joosten",
            "email": "Tim@activisme.be"
        }
    ],
    "autoload": {
        "psr-4": {
            "ActivismeBE\\FormHelper\\": "src/"
        }
    },
    "autoload-dev": {
        "classmap": [
            "tests/TestCase.php"
        ]
    },
    "scripts": {
        "fix-cs": [
            "vendor/bin/php-cs-fixer fix"
        ],
        "check-security": [
            "vendor/bin/security-checker security:check"
        ],
        "phpunit": [
            "vendor/bin/phpunit"
        ]
    },
    "require": {
        "php": ">=7.2.0"
    },
    "require-dev": {
        "phpunit/phpunit": "~8.0",
        "laravel/laravel": "~5.8",
        "friendsofphp/php-cs-fixer": "^2.9",
        "sensiolabs/security-checker": "^4.1"
    },
    "extra": {
        "laravel" : {
            "providers": [
                "ActivismeBE\\FormHelper\\FormServiceProvider"
            ]
        }
    }
}
